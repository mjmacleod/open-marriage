{{setPageTitle "RSVP"}}
{{setActiveNav "rsvp"}}
{{addCSS "/css/rsvp.css"}}

<div class="l-contain">
    <h1>RSVP for Our Wedding</h1>

    <p class="callout">
        To respond to your invitiation to our wedding, you’ll need to input the special code which was emailed to you.
    </p>
    <form class="resend l-grid" action="/rsvp/" method="POST">
        <div class="resend-email l-grid-u">
            <input type="code" name="code" placeholder="Your code">
        </div>
        <div class="resend-submit l-grid-u">
            <button type="submit" data-icon="s">RSVP</button>
        </div>
    </form>

    <br/>
    <br/>
    <br/>
    <br/>
    <p class="callout">
        If you have misplaced your code please use the form below to get a new code.
    </p>
    <h2>Resend Email with Special RSVP code</h2>
  {{#resent}}
    <p>
      {{#if needsEmail}}
        Please enter your email address.
      {{/if}}

      {{#if notGuest}}
        We do not have your email address (<b>{{notGuest}}</b>). Please email us and we’ll send your special RSVP link: <b><a href="mailto:rsvp@leslie-eric.us">rsvp@leslie-eric.us</a></b>
      {{/if}}

      {{#if sent}}
        Your special RSVP code has been sent to: <b>{{sent}}</b>
      {{/if}}
    </p>
  {{/resent}}

    <form class="resend l-grid" action="/rsvp/" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrf}}">

        <div class="resend-email l-grid-u">
            <input type="email" name="email" placeholder="Your Email">
        </div>

        <div class="resend-submit l-grid-u">
            <button type="submit" data-icon="s">Resend RSVP code</button>
        </div>
    </form>
</div>
