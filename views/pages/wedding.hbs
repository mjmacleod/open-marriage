{{setPageTitle "Wedding"}}
{{setActiveNav "wedding"}}
{{setYUIModule "MAC-wedding"}}
{{setDescription "The wedding details."}}
{{addCSS "/css/details.css"}}
{{addCSS "/css/wedding.css"}}

<div id="map" data-map="mmacleod.nm6dohm7"></div>
<div class="l-wrap">
    <a class="scroll-for-more-info" href="#bottom">Scroll for more information</a><span class="chevron"></span>
    <h1>
        Wedding, April 30, 2016
    </h1>
    <ol class="cal l-contain l-grid">
        {{#day "Wednesday 27 April"}}
                {{addDayEvent "Freedom Day"
                desc  = "Freedom Day"}}
            {{> day/header}}
            {{> day/events}}
        {{/day}}
        {{#day "Thursday 28 April"}}
            {{> day/header}}
            {{> day/events}}
        {{/day}}
        {{#day "Friday 29 April"}}
            {{> day/header}}
            {{> day/events}}
        {{/day}}
        {{#day "Saturday 30 April" primary=true}}
            {{addDayEvent "ceremony"
                start = "10:00am"
                desc  = "Wedding Ceremony"}}
            {{addDayEvent "reception"
                start = "1pm"
                end   = "12pm"
                desc  = "Reception"}}
            {{> day/header}}
            {{> day/events}}
        {{/day}}
        {{#day "Sunday 1 May"}}
                {{addDayEvent "Worker's Day"
                desc  = "Worker's Day"}}
            {{> day/header}}
            {{> day/events}}
        {{/day}}
        {{#day "Monday 2 May"}}
		{{addDayEvent "Worker's Day Observed"
                desc  = "Worker's Day Observed"}}
            {{> day/header}}
            {{> day/events}}
        {{/day}}
    </ol>

    <div class="l-contain">
        <ul class="travel-nav l-grid">
            <li class="travel-nav-item l-grid-u">
                <a class="button" data-icon="p" href="/logistics/">Get There</a>
            </li>
            <li class="travel-nav-item l-grid-u">
                <a class="button" data-icon="b" href="/logistics/hotels/">Stay There</a>
            </li>
        </ul>
    </div>

    <div class="details l-contain">
        <h2 id="ceremony" class="anchored-header">
            Ceremony
        </h2>
        <div class="details-group l-grid">
            <div class="l-grid-u">
                <p class="details-content">
                    The wedding ceremony will begin, on <b>Saturday at 10:00</b>. The ceremony will be held at the Harold Porter National Botanical Gardens in Betty's Bay:
                </p>
            </div>
            <div class="l-grid-u">
                <address class="details-content">
                    <a href="https://www.google.com/maps/place/Harold+Porter+National+Botanical+Garden/@-34.3508047,18.9246298,17z/data=!3m1!4b1!4m2!3m1!1s0x1dcdd6eab005543b:0x2f22652e331d15cb">
                        <b>Harold Porter National Botanical Gardens</b><br>
                        Broadwith Road<br>
                        Betty's Bay
                    </a>
                </address>
            </div>
        </div>

        <h2 id="ceremony" class="anchored-header">
            Reception
        </h2>
        <div class="details-group l-grid">
            <div class="l-grid-u">
                <p class="details-content">
                    The reception will begin, on <b>Saturday at 13:00</b>. The reception will be held at The Barn in Gordon's Bay:
                </p>
            </div>
            <div class="l-grid-u">
                <address class="details-content">
                    <a href="https://www.google.com/maps/place/The+Barn/@-34.1472192,18.8897159,17z/data=!4m6!1m3!3m2!1s0x1dcdcb901e516c23:0xb1c463c59ab6114c!2sJo's+Tours!3m1!1s0x0000000000000000:0x58b1d8f2379a77aa">
                        <b>The Barn</b><br>
                        Sir Lowry's Pass Road<br>
                        Gordon's Bay
                    </a>
                </address>
            </div>
        </div>
    </div>
    <span id="bottom">&nbsp;</span>
</div>
